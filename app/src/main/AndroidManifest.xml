<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bancouni">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BancoUni"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BancoUni">

        <!-- Tela inicial (agora com android:exported) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Outras telas -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".CadastroActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".PagamentoActivity" />
        <activity android:name=".PagamentoAgendadoActivity" />
        <activity android:name=".HistoricoActivity" />
        <activity android:name=".EducacaoFinanceiraActivity" />


    </application>


</manifest>
